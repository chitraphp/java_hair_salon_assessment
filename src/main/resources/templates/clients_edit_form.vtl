<div >
  <h1>Edit a Client</h1>
  <form class="form-inline" action="/clients/$client.getId()/edit" method="post">
    <div class="form-group">
      <label for="new_name">Name</label>
      <input type="text" class="form-control" id="new_name" name="new_name" value="$client.getName()">
    </div>
    <input type="hidden" name="stylist_id" id="stylist_id" value="$stylist.getId()">
    <button type="submit" class="btn btn-default">Add</button>
  </form>
</div>
